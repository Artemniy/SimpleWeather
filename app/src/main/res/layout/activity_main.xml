<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sr_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_bg"
    android:fitsSystemWindows="true"
    tools:context=".ui.MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/ic_info" />

                <EditText
                    android:id="@+id/city_et"
                    style="@style/ShadowedEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/hint_color"
                    android:hint="@string/enter_your_city"
                    android:imeOptions="actionDone" />

                <ImageButton
                    android:id="@+id/search"
                    style="@style/ShadowedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="#33A8A8A8"
                    android:foreground="?attr/selectableItemBackground"
                    android:src="@drawable/ic_search" />
            </LinearLayout>


            <TextView
                android:id="@+id/city"
                style="@style/ShadowedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textSize="@dimen/text_size_24" />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/weather_icon_size"
                android:layout_height="@dimen/weather_icon_size"
                android:layout_marginTop="@dimen/margin_default" />

            <TextView
                android:id="@+id/temp"
                style="@style/ShadowedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_100" />

            <TextView
                android:id="@+id/description"
                style="@style/ShadowedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/feels_like"
                style="@style/ShadowedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_20" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/visibility"
                        style="@style/ShadowedText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/default_drawable_padding"
                        android:textSize="@dimen/text_size_17"
                        app:drawableStartCompat="@drawable/ic_eye" />

                    <TextView
                        android:id="@+id/wind"
                        style="@style/ShadowedText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/default_drawable_padding"
                        android:textSize="@dimen/text_size_17"
                        app:drawableStartCompat="@drawable/ic_windstock" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_default"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pressure"
                        style="@style/ShadowedText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/default_drawable_padding"
                        android:textSize="@dimen/text_size_17"
                        app:drawableStartCompat="@drawable/ic_pressure" />

                    <TextView
                        android:id="@+id/humidity"
                        android:drawablePadding="12dp"
                        style="@style/ShadowedText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_17"
                        app:drawableStartCompat="@drawable/ic_humidity" />
                </LinearLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hourly_forecast_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small" />

            <LinearLayout
                android:id="@+id/daily_forecast_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                android:divider="@drawable/divider"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                android:showDividers="middle" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>